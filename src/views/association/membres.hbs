<div class="container-fluid p-4">
  <div class="container line1" id="liste_asso liste_membre">

    <div class="row" id="membres">
      <h1 class="titres">Liste des membres</h1>
      <a href="/association/ajouter_membre/{{association.numSIREN_asso}}" class="btn btn-success" id="button_membres">Ajouter un membre</a>
    </div>

    <div id="cadre_membres">

      {{#each person}}
      <div class="media asso">
        <div class="media-left media-middle">
          <img class="media-object logo" src="{{this.photo_personne}}" alt="Photo de profil de {{this.prenom_personne}}" id="logo_assos">
        </div>
        <div class="media-body">
          <h4 class="media-heading">{{this.prenom_personne}} {{this.nom_personne}}</h4>
          <p class="truncate">{{this.libelle_poste}}</p>
          <p class="truncate">{{this.email_personne}}</p>

          <!-- Open modal -->
          <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal{{id_personne}}">Supprimer</button>

          <!-- Modal -->
          <div id="myModal{{id_personne}}" class="modal fade" role="dialog">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4 class="modal-title titres">Suppression d'un membre</h4>
                </div>
                <div class="modal-body">
                  <p>Etes-vous s√ªr de vouloir supprimer ce membre ?</p>
                </div>
                <div class="modal-footer">
                  <form action="../supprimer_membre/{{this.numSIREN_asso}}/{{this.id_personne}}?_method=DELETE" method="post">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Abandonner</button>
                    <input type="hidden" name="_method" value="delete"/>
                    <button class="btn btn-danger" type="submit">Supprimer</button>
                  </form>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>


      {{else}}
      <div class="col-md-4 mx-auto">
        <div class="card card-body text-center">
          <p>Il n'y a pas de membres</p>
        </div>
      </div>
      {{/each}}

    </div>
  </div>
</div>
