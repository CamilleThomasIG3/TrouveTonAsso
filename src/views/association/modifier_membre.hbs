<div class="container p-4 line1">

  <div class="row" >
    <div class="col-md-4 mx-auto form_css">
      <div class="card text-center">
        <div class="card-header">
          <h3 class="titres">Modifiez ce membre</h3>
        </div>
        <div class="card-body">
          <form action="/association/modifier_membre/{{association.numSIREN_asso}}/{{personne.id_personne}}" method="post">
            <div class="form-group">
              <input type="text" value="{{personne.prenom_personne}}" name="prenom_personne" placeholder="PrÃ©nom" class="form-control" disabled="disabled">
            </div>
            <div class="form-group">
              <input type="text" value="{{personne.nom_personne}}" name="nom_personne" placeholder="Nom" class="form-control" disabled="disabled">
            </div>

            <p class="sous-titre">Poste : </p>

            <select name="libelle_poste" id="menu_deroulant">
              <option value="{{personne.poste}}">{{personne.poste}}</option>
              {{#each poste}}
                <option value="{{this.libelle_poste}}">{{this.libelle_poste}}</option>
              {{/each}}
            </select>

            <a href="../../ajout_poste/{{association.numSIREN_asso}}" class="btn btn-success">Ajouter un poste</a>


            <div class="form-group">
              <button class="btn btn-success btn-block">Sauvegarder</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
