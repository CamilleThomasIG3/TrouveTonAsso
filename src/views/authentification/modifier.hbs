<div class="container p-4 line1">
  <div class="row">
    <div class="col-md-4 mx-auto form_css">
      <div class="card text-center">
        <div class="card-header">
          <h3 class="titres">Modifiez votre profil</h3>
        </div>
        <div class="card-body">
          <form action="/modifier/{{personne.id_personne}}" method="post">
            <div class="form-group">
              <input type="text" value="{{personne.prenom_personne}}" name="prenom_personne" placeholder="PrÃ©nom" class="form-control" autofocus required>
            </div>
            <div class="form-group">
              <input type="text" value="{{personne.nom_personne}}" name="nom_personne" placeholder="Nom" class="form-control" required>
            </div>
            <div class="form-group">
              <input type="date" value="{{personne.date_naissance_personne}}" name="date_naissance_personne" placeholder="Date de naissance" class="form-control" required>
