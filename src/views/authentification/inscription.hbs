<div class="container p-4 line1">
  <div class="row">
    <div class="col-md-4 mx-auto form_css">
      <div class="card text-center">
        <div class="card-header">
          <h3 class="titres">Inscription</h3>
        </div>
        <div class="card-body">
          <form action="/inscription" method="post">
            <div class="form-group">
              <input type="text" name="prenom_personne" placeholder="Prénom" class="form-control" autofocus required>
            </div>
            <div class="form-group">
              <input type="text" name="nom_personne" placeholder="Nom" class="form-control" required>
            </div>
            <div class="form-group">
              <input type="date" name="date_naissance_personne" placeholder="Date de naissance : jj/mm/aaaa" class="form-control" required>
            </div>
            <div class="form-group">
              <input type="text" name="adresse_personne" placeholder="Adresse" class="form-control" required>
            </div>
            <div class="form-group">
              <input type="number" name="CP_personne" placeholder="Code Postal" class="form-control" required>
            </div>
            <div class="form-group">
              <input type="text" name="ville_personne" placeholder="Ville" class="form-control" required>
            </div>
            <div class="form-group">
              <input type="email" name="email_personne" placeholder="Email" class="form-control" required>
            </div>
            <div class="form-group">
              <input type="password" name="mdp_personne" placeholder="Mot de passe" class="form-control">
            </div>
            <div class="form-group">
              <input type="password" name="mdp_personne2" placeholder="Confirmation de mot de passe" class="form-control">
            </div>
            <div class="form-group">
              <label for="image_upload">Sélectionner une photo de profil :</label>
              <input type="file" id="image_upload" accept="image/*" name="photo_personne" class="form-control">
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block" type="submit">Inscription</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
